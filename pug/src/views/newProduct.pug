html
    head
        link(rel="stylesheet", href="css/style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        title='Pug'
    body 
        ul(class="nav")
                li(class="nav-item")
                    a(href="http://localhost:8080/", class="nav-link" ) Inicio
                li(class="nav-item")
                    a(href="http://localhost:8080/newProduct", class="nav-link active") Agregar Producto
                li(class="nav-item")
                    a(href="http://localhost:8080/products", class="nav-link") Productos

        div(class='container')
            h1(class="text-center")='Agregar producto'
            block login
                form(id="productForm")
                    div(class="mb-3")
                        label(for="name", class="form-label")="Nombre:"
                        input(type="text", name="name", class="form-control", required)
                    br
                    div(class="mb-3")
                        label(for="name", class="form-label")="Precio:" 
                        input(type="number", name="price", class="form-control", required)
                    br
                    div(class="mb-3")
                        label(for="name", class="form-label")='Imagen:'
                        input(type="file", name="img", class="form-control", required)
                    br
                    input(type="submit" value="Enviar" class="btn btn-danger")


        script(src="js/newProduct.js")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js", integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js", integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13", crossorigin="anonymous")