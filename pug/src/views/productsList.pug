html
    head
        link(rel="stylesheet", href="css/style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        title='Pug'
    body
        ul(class="nav")
                li(class="nav-item")
                    a(href="http://localhost:8080/", class="nav-link" ) Inicio
                li(class="nav-item")
                    a(href="http://localhost:8080/newProduct", class="nav-link") Agregar Producto
                li(class="nav-item")
                    a(href="http://localhost:8080/products", class="nav-link active") Productos

        h1(class="text-center")='Productos'

        ul(class="row")
            li(class="text-center col-4 bg-white")='Nombre'
            li(class="text-center col-4 bg-white")='Precio'
            li(class="text-center col-4 bg-white")='Imagen'
        
        ul(class="row")
            if listVoid
                h2='No existen productos'
            else
                each product in products
                    li(class="text-center col-4")= product.name
                    li(class="text-center col-4")= product.price
                    li(class="text-center col-4")
                        img(src="http://localhost:8080/img/"+product.img, alt="product image", style='height:85px;')

        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js", integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js", integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13", crossorigin="anonymous")